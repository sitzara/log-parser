  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "./**/*.spec.ts",
    "./**/*.test.ts",
  ]
}
